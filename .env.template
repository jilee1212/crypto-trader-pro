# Crypto Trader Pro - Environment Variables Template
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to version control!

# ================================
# EXCHANGE API CREDENTIALS
# ================================

# Binance API Keys (get from https://www.binance.com/en/my/settings/api-management)
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_API_SECRET=your_binance_api_secret_here

# Coinbase Pro API Keys (get from https://pro.coinbase.com/profile/api)
COINBASE_API_KEY=your_coinbase_api_key_here
COINBASE_API_SECRET=your_coinbase_api_secret_here
COINBASE_PASSPHRASE=your_coinbase_passphrase_here

# Kraken API Keys (get from https://www.kraken.com/u/security/api)
KRAKEN_API_KEY=your_kraken_api_key_here
KRAKEN_API_SECRET=your_kraken_api_secret_here

# ================================
# TRADING CONFIGURATION
# ================================

# Trading Mode - IMPORTANT: Always start with testnet!
TRADING_MODE=testnet
# Options: testnet, paper, live

# Risk Management
MAX_RISK_PER_TRADE=0.02
DAILY_LOSS_LIMIT=0.03
MAX_POSITIONS=3

# Strategy Parameters
RSI_PERIOD=14
RSI_BUY_THRESHOLD=30
RSI_SELL_THRESHOLD=70

# ================================
# NOTIFICATIONS
# ================================

# Telegram Bot (optional - for trade notifications)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# Email Notifications (optional)
EMAIL_SMTP_SERVER=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USERNAME=your_email@gmail.com
EMAIL_PASSWORD=your_app_password_here
EMAIL_TO=your_email@gmail.com

# ================================
# DATABASE & LOGGING
# ================================

# Database Settings
DATABASE_PATH=data/crypto_data.db
DATABASE_MAX_CONNECTIONS=5

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE_PATH=logs/crypto_trader.log
LOG_MAX_SIZE_MB=50
CONSOLE_LOGGING=true

# ================================
# SYSTEM SETTINGS
# ================================

# Resource Monitoring
MAX_CPU_PERCENT=80
MAX_MEMORY_PERCENT=85
MIN_DISK_SPACE_GB=1

# Rate Limiting
RATE_LIMIT_CALLS_PER_SECOND=10
RATE_LIMIT_CALLS_PER_MINUTE=600

# ================================
# ARBITRAGE SETTINGS
# ================================

# Arbitrage Configuration
ENABLE_ARBITRAGE=true
MIN_ARBITRAGE_PROFIT=0.5
ARBITRAGE_EXCHANGES=binance,coinbase,kraken

# ================================
# ADVANCED SETTINGS
# ================================

# Performance Tuning
CACHE_TTL_SECONDS=5
MAX_WORKER_THREADS=5
CONNECTION_TIMEOUT_SECONDS=30

# Emergency Controls
EMERGENCY_STOP_ENABLED=true
MAX_DAILY_LOSS_PERCENT=5.0